# ==============================================================================
# CREATIK HUB - ENVIRONMENT VARIABLES
# ==============================================================================
# Copy this file to .env and fill in the values

# ==============================================================================
# APPLICATION
# ==============================================================================
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:3001

# ==============================================================================
# DATABASE
# ==============================================================================
DATABASE_URL=postgresql://developer:devpassword123@localhost:5432/creatik_hub

# ==============================================================================
# REDIS
# ==============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=          # Optional - leave empty for local development
REDIS_DB=0

# ==============================================================================
# JWT SECRETS
# Generate secrets with: openssl rand -base64 64
# ==============================================================================
JWT_ACCESS_SECRET=your-super-secret-access-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=30d
REFRESH_TOKEN_EXPIRY_DAYS=30

# ==============================================================================
# EMAIL SERVICE
# ==============================================================================
# Options: 'maildev' (development) or 'sendgrid' (production)
EMAIL_PROVIDER=maildev

# SendGrid (Production)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@creatik-hub.com
SENDGRID_FROM_NAME=Creatik Hub

# MailDev (Development - Local SMTP Testing)
MAILDEV_HOST=localhost
MAILDEV_PORT=1025

# ==============================================================================
# OAUTH - GOOGLE
# ==============================================================================
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/oauth/callback?provider=google

# ==============================================================================
# OAUTH - FACEBOOK
# ==============================================================================
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_REDIRECT_URI=http://localhost:3000/api/auth/oauth/callback?provider=facebook

# ==============================================================================
# OAUTH - APPLE
# ==============================================================================
APPLE_CLIENT_ID=your-apple-client-id
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLE_PRIVATE_KEY_PATH=./keys/apple-private-key.p8
APPLE_REDIRECT_URI=http://localhost:3000/api/auth/oauth/callback?provider=apple

# ==============================================================================
# RATE LIMITING
# ==============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==============================================================================
# SECURITY
# ==============================================================================
CORS_ORIGIN=http://localhost:3001
COOKIE_SECRET=your-cookie-secret-change-in-production

# ==============================================================================
# AWS S3 (for file uploads)
# ==============================================================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=creatik-hub-assets

# ==============================================================================
# MONITORING & LOGGING
# ==============================================================================
LOG_LEVEL=info
SENTRY_DSN=

# ==============================================================================
# NOTES
# ==============================================================================
# - Generate JWT secrets: openssl rand -base64 64
# - MailDev Web UI: http://localhost:1080
# - PostgreSQL: postgresql://developer:devpassword123@localhost:5432/creatik_hub
# - Redis: localhost:6379
